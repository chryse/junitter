<% if signed_in? %>
		<div class="row">
				<aside class="span4">
						<section>
								<%= render 'shared/user_info' %>
						</section>
						<section>
								<%= render 'shared/stats' %>
						</section>
						<section>
								<%= render 'shared/micropost_form' %>
						</section>
				</aside>
				<div class="span8">
						<h3>Micropost Feed</h3>
						<%= render 'shared/feed' %>
				</div>
		</div>
<% else %>
		<div class="center hero-unit">
				<h1>Welcome to the Junitter</h1> 
				<h2>
						This is a simple twitter clone app based on 
						<a class="link" href="http://railstutorial.org/book" target="_blank">Ruby on Rails Tutorial</a>
				</h2>

				<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-success" %>
		</div>

		<!-- <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %> -->
<% end %>
